{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++: clang++ 활성 파일 빌드 및 디버그",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [
        "-std=c++17",
        "-cfolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "${fileDirname}/**.cpp",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
      "preLaunchTask": "C/C++: clang++ 활성 파일 빌드"
    }
  ]
}
